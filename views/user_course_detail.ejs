            <div class="card-element">
                <div class="card-content">
                    <h3 class="subject-name">Iqbal's <span class="subject-title">Javascript</span> Course</h3>
                    <h3>Study Plan</h3>
                </div>

                <div class="progress">
                    <h3>0%</h3>
                </div>

                <a href="#" id="btn-close"><img src=".//asset/close.png" alt="close-btn" width="13px"></a>
            </div>
        </div> -->
    </section>

    <section class="create-section hide">
      <h2 class="judul">Create Custom Study Plan</h2>

      <div class="create-container">
        <div class="create-items">
          <h5 class="subjudul">Tell us your goals</h5>
          <p class="isi">
            And we'll tailor the content to match them. Make sure your info is
            correct <br />
            because there are a lot of calculations going on under the hood.
          </p>

          <img
            src=".//asset/build_media_viewer_doctors.png"
            class="img-fluid"
            alt="Responsive image"
          />
        </div>

        <div class="create-form">
          <label for="exam-date"><b>EXAM DATE</b></label>
          <input type="date" name="examDate" id="exam-date" required />

          <div class="time-input">
            <div class="hourDay">
              <label for="hour"><b>HOURS PER DAY</b></label>
              <input type="number" id="hour" min="1" max="24" required />
            </div>

            <div class="dayWeek">
              <label for="days"><b>DAYS PER WEEK</b></label>
              <input
                type="number"
                name="dayWeek"
                id="days"
                min="1"
                max="7"
                required
              />
            </div>
          </div>

          <label for="subject1"><b>SUBJECT 1</b></label>
          <input type="text" id="subject1" />

          <button id="btn-createStudyPlan">Create Study Plan</button>
        </div>
      </div>
    </section>

    <script>
      function getParameterByName(name, url) {
        if (!url) url = window.location.href;
        name = name.replace(/[[]]/g, "\\$&");
        var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
          results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return "";
        return decodeURIComponent(results[2].replace(/\+/g, " "));
      }

      // Get the value of the 'message' parameter from the current URL
      var messageValue = getParameterByName("message");
      let messageElement = document.getElementById("message");
      messageElement.textContent = messageValue;
    </script>

    <script src="/javascripts/index.js"></script>
  </body>
</html>
