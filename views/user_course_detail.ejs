  <body>
    <header class="header">
      <section class="flex">
        <a href="index.html" class="logo">Meducate</a>

      </section>
    </header>

    <section class="home-section">
      <div class="welcome-msg">
        <span id="message"></span>

        <div class="row">
          <!-- Card 1 -->
          <div class="card">
            <div class="card-header">
              <div class="card-title">
                <h3><%= course.title %></h3>
              </div>
            </div>
            <div class="card-body">
              <span class="badge bg-success"
                >Instructor : <%= course.instructor %></span
              >
              <span class="badge bg-success"
                >Duration : <%= course.duration %> Hours</span
              >
              <br />
              <p class=""><%= course.description %></p>
              <a href="/users/role/home" class="btn btn-primary">Go back</a>
            </div>
          </div>
          <!-- Add more cards as needed -->
        </div>
      </div>
    </section>

    <section class="landing-section hide">
      <h2 class="judul">Study Plan</h2>

      <div class="landing-container">
        <div class="landing-item">
          <h2 class="subjudul">
            Ace your next exam with the perfect study plan
          </h2>
          <p class="isi">
            Get a personalized study plan based on the patterns of top scorers
            and machine learning-tailored exactly to your needs and habits.
          </p>

          <button id="btn-create">Create Study Plan</button>
        </div>

        <img
          src=".//asset/build_media_viewer_doctors.png"
          alt="Responsive-image"
          width="20%"
        />
      </div>

