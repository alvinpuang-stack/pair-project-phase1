    <section class="create-section hide">
      <h2 class="judul">Create Custom Study Plan</h2>

      <div class="create-container">
        <div class="create-items">
          <h5 class="subjudul">Tell us your goals</h5>
          <p class="isi">
            And we'll tailor the content to match them. Make sure your info is
            correct <br />
            because there are a lot of calculations going on under the hood.
          </p>

          <img
            src=".//asset/build_media_viewer_doctors.png"
            class="img-fluid"
            alt="Responsive image"
          />
        </div>

        <div class="create-form">
          <label for="exam-date"><b>EXAM DATE</b></label>
          <input type="date" name="examDate" id="exam-date" required />

          <div class="time-input">
            <div class="hourDay">
              <label for="hour"><b>HOURS PER DAY</b></label>
              <input type="number" id="hour" min="1" max="24" required />
            </div>

            <div class="dayWeek">
              <label for="days"><b>DAYS PER WEEK</b></label>
              <input
                type="number"
                name="dayWeek"
                id="days"
                min="1"
                max="7"
                required
              />
            </div>
          </div>

          <label for="subject1"><b>SUBJECT 1</b></label>
          <input type="text" id="subject1" />

          <button id="btn-createStudyPlan">Create Study Plan</button>
        </div>
      </div>
    </section>

