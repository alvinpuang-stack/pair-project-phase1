    <section class="home-section">
      <div class="welcome-msg">
        <h1>Welcome to MEDUCATE</h1>
        <p>
          Medical Students from all over the world use us every day to excel in
          their medical studies and exam prep
        </p>

        <a
          class="btn btn-success"
          href="/users/role/courses"
          style="max-width: 300px"
          >Explore All Course</a
        >
      </div>
      <div class="welcome-msg">
        <h1>Course Active</h1>
        <div class="row">
          <!-- Card 1 -->
          <% enrollments.forEach(element => { %>
          <div class="col-md-4">
            <div class="card course-card">
              <div class="card-body">
                <h5 class="card-title"><%= element.course.title %></h5>
                <p class="card-text"><%= element.course.description %></p>
                <span class="card-text badge bg-warning"><%= element.id %></span>
                <a href="/users/role/course/learnmore/detail/<%= element.course.id %>" class="btn btn-primary"
                  >Learn More</a
                >
              </div>
            </div>
          </div>
          <% }) %>

          <!-- Add more cards as needed -->
        </div>
      </div>
    </section>

    <section class="landing-section hide">
      <h2 class="judul">Study Plan</h2>

      <div class="landing-container">
        <div class="landing-item">
          <h2 class="subjudul">
            Ace your next exam with the perfect study plan
          </h2>
          <p class="isi">
            Get a personalized study plan based on the patterns of top scorers
            and machine learning-tailored exactly to your needs and habits.
          </p>

          <button id="btn-create">Create Study Plan</button>
        </div>

        <img
          src=".//asset/build_media_viewer_doctors.png"
